{
  "name": "@monorepo/root",
  "private": true,
  "devDependencies": {
    "craco": "^0.0.3",
    "lerna": "^5.4.3"
  },
  "scripts": {
    "start": "concurrently \"yarn run start:pokemon\" \"yarn run start:form\"",
    "start:form": "lerna exec --scope @monorepo/form -- yarn start",
    "start:form:storybook": "lerna exec --scope @monorepo/form -- yarn storybook",
    "start:pokemon": "lerna exec --scope @monorepo/pokemon-rest -- yarn start",
    "start:storybook": "lerna exec --scope @monorepo/storybook -- yarn storybook"
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  },
  "dependencies": {
    "concurrently": "^7.3.0"
  }
}
